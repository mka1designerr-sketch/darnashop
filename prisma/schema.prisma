generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String    @id
  name         String
  price        Int
  oldPrice     Int?
  rating       Float     @default(4.0)
  qty          Int       @default(0)
  categories   String[]  @default([])
  description  String?
  deliveryInfo String?
  variants     Variant[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Variant {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  colorName String
  colorHex  String?
  images    String[] @default([])
  isPrimary Boolean  @default(false)
}

model Category {
  id        String   @id
  name      String
  cover     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderHistory {
  id          String   @id
  productId   String
  productName String
  qty         Int
  remaining   Int
  createdAt   DateTime
}

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
